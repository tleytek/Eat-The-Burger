<div class="container">
    <div class="row justify-content-start">
        <div class="col mt-5">
            <h1 class="text-center pt-5 mt-5">Eat Da Burger!</h1>
        </div>
    </div>
    {{#each burgers}}
    <div class="row justify-content-start">
        <div class="col">
            {{#unless devoured}}
            <h3 class="text-center mx-auto">{{burger_name}}</h3>
            {{/unless}}
        </div>
        <div class="col text-center mx-auto">
            {{#unless devoured}}
            <button class="btn btn-danger devour-burger my-1" data-id="{{id}}" data-devoured="{{devoured}}">Devour!</button>
            {{/unless}}
        </div>
        <div class="col text-center">
            {{#if devoured}}
            <h3 class="text-center mx-auto">{{burger_name}}</h3>
            {{/if}}
        </div>
    </div>
    {{/each}}

    <div class="row mt-5">
        <div class="col">
            <h2 class="text-center">Add a Burger</h2>
            <form class="create-form text-center">
                <div class="form-group row justify-content-center">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="burgerName" name="name">
                </div>

                <button type="submit" class="text-center" id="submitButton">Add Burger</button>
            </form>
        </div>
    </div>
</div>